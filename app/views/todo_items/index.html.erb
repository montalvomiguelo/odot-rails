<p id="notice"><%= notice %></p>

<h1><%= @todo_list.title %></h1>

<table class="todo_items">
  <thead>
    <tr>
      <th>Content</th>
      <th>Completed at</th>
      <th colspan=2>Functions</th>
    </tr>
  </thead>
  <tbody>
    <% @todo_list.todo_items.each do |todo_item| %>
      <tr id="<%= dom_id(todo_item) %>">
        <td><%= todo_item.content %></td>
        <% if todo_item.completed? %>
          <td><%= todo_item.completed_at %></td>
        <% else %>
          <td><%= link_to "Mark Complete", complete_todo_list_todo_item_path(@todo_list, todo_item), method: :patch %></td>
        <% end %>
        <td>
          <%= link_to "Edit", edit_todo_list_todo_item_path(@todo_list, todo_item) %>
          <%= link_to "Destroy", todo_list_todo_item_path(@todo_list, todo_item), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Todo Item', new_todo_list_todo_item_path %>
<%= link_to 'Back', todo_lists_path %>

